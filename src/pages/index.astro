---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'My Astro Blog';
const description = 'The perfect starter for your perfect blog.';
const permalink = Astro.site.href;
---
<script>
  let keanuPoster=document.getElementsByClassName("moviePoster")[0] as HTMLImageElement;
let heading=document.getElementById("random-caption");
let button=document.querySelector("button");

let audio=document.querySelector("audio");
let backgroundImg=document.querySelector("main");

const url =`https://whoa.onrender.com/whoas/random`;
console.log(url);
const backgroundUrl =  `placekeanu.com/250`;
console.log(backgroundUrl);
button.addEventListener("click", function(){

  fetch(url)
  .then(response => response.json())
  .then( keanuData => {
    //check
    console.log( keanuData );
    console.log(keanuData[0].poster);

    keanuPoster.src=keanuData[0].poster;
   audio.src=keanuData[0].audio; heading.innerText=keanuData[0].movie;
    
  });
});

</script>


<BaseLayout title={title} description={description} permalink={permalink}>
  <div class="home-container">
    <div class="main home-copy">
      <h1 class="text-orange-500">Welcome to the Woah Machine</h1>
      <button class="btn btn-primary justify-center items-center">Generate Keanu</button>
      <p>Click the button to hear actor Keanu Reeves' favorite phrase from  his films</p>
    </div>

    <div class="hero-image-container">
      
        <div id="meme-wrapper">
          <img width="600" class="moviePoster" src="/assets/keanu_logo.png" />
          
        </div>
            <h2 id="random-caption"></h2>
      
          <audio class="hidden"src="" controls autoplay></audio>
      
    </div>
  </div>
</BaseLayout>

<style>
  .home-container {
    align-items: center;
    display: flex;
    flex: 1;
    justify-content: center;
    margin: 2em 0;
    min-height: 400px;
  }

  .home-copy {
    flex: 1;
    padding: 0 1em;
  }

  .home-copy h1 {
    font-weight: 700;
    margin-bottom: 0.5em;
    line-height: 1.3;
  }

  .home-copy p {
    font-size: 1.4em;
  }

  .hero-image-container {
    margin: 0 1em;
    text-align: center;
  }

  .hero-image-container picture {
    display: block;
    min-height: 250px;
  }

  .caption {
    font-size: .8em;
    font-style: italic;
    text-align: left;
  }

  .hero-image {
    width: 100%;
    max-width: 550px;
    margin-bottom: 1em;
  }

  @media (max-width: 1200px) {
    p {
      font-size: 1.2em;
    }

    .hero-image {
      max-width: 400px;
    }
  }

  @media (max-width: 800px) {
    .home-container {
      flex-direction: column;
    }

    .home-copy {
      flex: 0;
      padding-bottom: 2em;
      text-align: center;
    }
  }
</style>
